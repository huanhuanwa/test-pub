{
  "name": "test-libs",
  "version": "0.0.25",
  "private": true,
  "license": "ISC",
  "scripts": {
    "install": "lerna bootstrap",
    "test": "jest --forceExit --coverage",
    "change": "lerna changed",
    "diff": "lerna diff",
    "release:publish": "lerna publish  --dist-tag next --force-publish",
    "publish": "lerna publish from-git --contents dist --force-publish",
    "pub": "lerna publish --force-publis",
    "release": "lerna version --conventional-commits --yes",
    "prebuild": "git clean -fdx packages -e packages/component/*/node_modules",
    "build": "yarn tsc -b && lerna run build:webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huanhuanwa/test-puba.git"
  },
  "bugs": {
    "url": "https://github.com/huanhuanwa/test-puba/issues"
  },
  "homepage": "https://github.com/huanhuanwa/test-puba#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/huanhuanwa"
  },
  "dependencies": {},
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/component/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-jest": "^27.2.4",
    "clean-webpack-plugin": "^4.0.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.28.0",
    "eslint-plugin-jest": "^24.5.2",
    "husky": "^6.0.0",
    "jest": "^27.2.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "standard-version": "^9.3.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "typescript": "^4.3.2",
    "webpack": "^5.58.0",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  }
}
