{
  "name": "test-libs",
  "version": "0.0.25",
  "private": true,
  "license": "ISC",
  "scripts": {
    "install": "lerna bootstrap",
    "test": "jest --forceExit --coverage",
    "build": "rimraf dist && npm run build:main & npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "change": "lerna changed",
    "diff": "lerna diff",
    "release": "lerna version --conventional-commits --yes",
    "publish": "lerna publish from-git --contents ../../dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huanhuanwa/test-puba.git"
  },
  "bugs": {
    "url": "https://github.com/huanhuanwa/test-puba/issues"
  },
  "homepage": "https://github.com/huanhuanwa/test-puba#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/huanhuanwa"
  },
  "dependencies": {
    "test-huan-b": "^5.0.13"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/component/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jasmine": "^3.3.13",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "ts-jest": "^26.5.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "standard-version": "^9.3.0",
    "ts-loader": "^6.0.4",
    "ts-node": "~8.3.0",
    "typescript": "^4.3.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.2"
  }
}
