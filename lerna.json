{
    "version": "0.0.0",
    "npmClient": "npm",
    "packages": [
        "packages/*"
    ],
    "workspaces": [
        "packages/*"
    ],
    "command": {
        "publish": {
            "message": "chore(release): publish",
            "ignoreChanges": [
                ".gitignore",
                "*.log",
                "*.md"
            ]
        },
        "bootstrap": {
            "ignore": "npm-*",
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    }
}