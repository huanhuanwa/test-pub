{
    "version": "0.0.30",
    "npmClient": "npm",
    "useWorkspaces": true,
    "command": {
        "version": {
            "allowBranch": "main",
            "conventionalCommits": true,
            "exact": true,
            "ignoreChanges": [
                "**/*.md"
            ],
            "message": "build: release version %v"
        },
        "publish": {
            "message": "chore(release): publish",
            "ignoreChanges": [
                ".gitignore",
                "*.log",
                "*.md"
            ]
        },
        "bootstrap": {
            "ignore": "npm-*",
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    }
}